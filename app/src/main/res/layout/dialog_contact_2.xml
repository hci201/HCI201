<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="40dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repairer_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_repaier"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/txt_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lam Thanh Phat"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txt_dialog_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua chua do dien, ong nuoc"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="7h - 18h"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:clickable="false"
            android:layout_gravity="center_horizontal"

            />
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btn_dialog_call"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lien he"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_repairer_button"
            android:layout_marginHorizontal="50dp"

            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_review"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem danh gia"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_review_button"
            android:layout_marginHorizontal="50dp"
            />

    </LinearLayout>

  


</android.support.v7.widget.CardView>